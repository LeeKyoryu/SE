<p id="notice"><%= notice %></p>

<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        当前账号：<%= current_user.name %>
      </h1>
    </section>
  </aside>
</div>

<p>
  <%= gravatar_for @user, size: 80 %>
  <strong>账号首页：<%= @user.name %></strong>
</p>

<p>
  <strong>邮箱：</strong>
  <%= @user.email %>
</p>

<p>
  <strong>当前关卡：</strong>
  <%= @user.level %>
</p>

<p>
<%= link_to "开始游戏", game_url %> |
<%= link_to "选择关卡", chongzhi_url %>
</p>

<div id="user-microposts" class="col-md-8">
  <% if @user.microposts.any? %>
    <h3>我的留言(<%= @user.microposts.count %>)</h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
    <%= will_paginate @microposts %>
  <% end %>
</div>

<p>
  <%= link_to '编辑个人信息', edit_user_path(@user) %> |
  <%= link_to '登出', logout_path, data: { confirm: '确定退出？' } %>
</p>

<p>
  <% if @user.id == 1 %>
    <%= link_to '玩家列表', users_path %>
  <% end %>
</p>