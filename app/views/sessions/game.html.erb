<p id="notice"><%= notice %></p>

<p>
  <%= gravatar_for current_user, size: 80 %>
  <strong><%= current_user.name %></strong>
</p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: game_path) do |f| %>

      <%= f.label :data, "当前关卡：" + current_user.show_level %>

      <%= f.submit "登录", class: "btn btn-primary" %>
    <% end %>

    <p><%= link_to "返回", current_user %></p>
  </div>
</div>
